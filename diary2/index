                const user = userCred.user;
                
                // 2. Update Display Name
                await updateProfile(user, { displayName: name });
                
                // 3. Send Verification Email
                await sendEmailVerification(user);

                // 4. Create User Doc in Firestore with "Pending" Status
                // If it's the specific Admin Email, auto-approve
                const status = (email === ADMIN_EMAIL) ? 'active' : 'pending';
                await setDoc(doc(db, "users", user.uid), {
                    email: email,
                    displayName: name,
                    status: status,
                    createdAt: serverTimestamp()
                });

                showToast("Ø¯Ø±Ø®ÙˆØ§Ø³Øª Ø¨Ú¾ÛŒØ¬ Ø¯ÛŒ Ú¯Ø¦ÛŒ!");
                // Note: Auth state change listener will handle the UI redirect to Pending Screen
            }
